<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="crm_sale_invoice_tree_view" model="ir.ui.view">
        <field name="name">销售发票</field>
        <field name="model">crm.sale.invoice</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="invoice_number"/>
                <field name="applicant_id"/>
                <field name="partner_id"/>
                <field name="contract_id"/>
                <field name="invoice_date"/>
                <field name="subtotal"/>
                <field name="invoice_type"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <record id="crm_sale_invoice_form_view" model="ir.ui.view">
        <field name="name">销售发票</field>
        <field name="model">crm.sale.invoice</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="next_stated" type="object" class="oe_highlight" string="验证"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive" groups="odoo_crm.director_groups">
                            <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                        </button>
                    </div>
                    <div class="oe_title" name="title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="invoice_number" placeholder="请录入发票号码..."/>
                        </h1>
                        <h2>
                            <field name="code" readonly="1"/>
                        </h2>
                    </div>
                    <group col="2">
                        <group>
                            <field name="currency_id" invisible="1"/>
                            <field name="applicant_id" options="{'no_create_edit': True}"/>
                            <field name="partner_id" options="{'no_create_edit': True}"/>
                            <field name="contract_id" options="{'no_create_edit': True}"/>
                            <field name="cashback_ids" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}"/>
                        </group>
                        <group>
                            <field name="invoice_date"/>
                            <field name="subtotal"/>
                            <field name="invoice_type"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="发票信息">
                            <group>
                                <group>
                                    <field name="look_type"/>
                                    <field name="invoice_look"/>
                                    <field name="tax_number"/>
                                    <field name="look_phone"/>
                                    <field name="look_addr"/>
                                    <field name="look_bank"/>
                                    <field name="look_bank_number"/>
                                </group>
                                <group>
                                    <field name="recipient"/>
                                    <field name="recipient_phone"/>
                                    <field name="recipient_postal"/>
                                    <field name="recipient_addr"/>
                                </group>
                            </group>
                        </page>
                        <page>
                            <group>
                                <field name="company_id" options="{'no_create_edit': True, 'no_open': True}"/>
                                <field name="create_uid" options="{'no_create_edit': True, 'no_open': True}"/>
                                <field name="create_date" widget="date"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="crm_sale_invoice_action">
        <field name="name">销售发票</field>
        <field name="res_model">crm.sale.invoice</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                创建一个新的销售发票
            </p>
        </field>
    </record>

    <menuitem id="crm_sale_invoice_menu" name="销售发票" parent="money_root_menu" sequence="3" action="crm_sale_invoice_action"/>

</odoo>