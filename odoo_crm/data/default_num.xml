<odoo>
    <data noupdate="1">

        <record id="crm_sale_opportunity_number" model="ir.sequence">
            <field name="name">销售机会编号规则</field>
            <field name="code">crm.sale.opportunity.code</field>
            <field name="prefix">OPP.%(year)s%(month)s%(day)s</field>
            <field name="suffix"/>
            <field name="padding">4</field>
        </record>

        <record id="crm_sale_order_number" model="ir.sequence">
            <field name="name">报价单编号规则</field>
            <field name="code">crm.sale.order.code</field>
            <field name="prefix">QS.%(year)s%(month)s%(day)s</field>
            <field name="suffix"/>
            <field name="padding">4</field>
        </record>

        <record id="crm_sale_contract_number" model="ir.sequence">
            <field name="name">订单合同编号规则</field>
            <field name="code">crm.sale.contract.code</field>
            <field name="prefix">SO.%(year)s%(month)s%(day)s</field>
            <field name="suffix"/>
            <field name="padding">4</field>
        </record>

         <record id="sale_contract_cashback_plan_number" model="ir.sequence">
            <field name="name">回款计划编号规则</field>
            <field name="code">sale.contract.cashback.plan.code</field>
            <field name="prefix">PMO.%(year)s%(month)s%(day)s</field>
            <field name="suffix"/>
            <field name="padding">4</field>
        </record>

        <record id="sale_order_return_number" model="ir.sequence">
            <field name="name">退货退款编号规则</field>
            <field name="code">crm.sale.order.return.code</field>
            <field name="prefix">RFO.%(year)s%(month)s%(day)s</field>
            <field name="suffix"/>
            <field name="padding">4</field>
        </record>

        <record id="crm_sale_invoice_number" model="ir.sequence">
            <field name="name">销售发票编号规则</field>
            <field name="code">crm.sale.invoice.code</field>
            <field name="prefix">IVO.%(year)s%(month)s%(day)s</field>
            <field name="suffix"/>
            <field name="padding">4</field>
        </record>

    </data>
</odoo>